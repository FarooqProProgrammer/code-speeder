generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

generator prismaTypesGenerator {
  provider = "npx prisma-types-generator"
  output   = "../src/generated/types"
}

// ======================================
// ============ MODELS ==================
// ======================================
// 1. USERS MODEL
// 2. OTP MODEL
// 3. IMAGES MODEL
// 4. ADDRESS MODEL

// ======================================
// ============ USERS MODEL =============
// ======================================
model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  role      Role      @default(USER)
  is_delete Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  otps      Otp[]
  images    Image[]
  addresses Address[]

  @@index([name])
  @@map("users")
}

// ======================================
// ============ OTP MODEL =============
// ======================================
model Otp {
  id        String   @id @default(cuid())
  otpCode   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@map("otp")
}

// ======================================
// ============ IMAGES MODEL =============
// ======================================
model Image {
  id        String   @id @default(cuid())
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([url])
  @@map("images")
}

// ======================================
// ============ ADDRESS MODEL =============
// ======================================
model Address {
  id        String   @id @default(cuid())
  location  String?
  country   String?
  city      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])

  @@map("address")
}

// ======================================
// ============ BLOG ===================
// ======================================
model Blog {
  id        String     @id @default(cuid())
  title     String
  content   String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  blogMetas BlogMeta[]

  @@map("blog")
}

// ======================================
// ============ BLOG META ===================
// ======================================
model BlogMeta {
  id               String   @id @default(cuid())
  MetaTitle        String?
  MetaDescription  String?
  CanonicalSection String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  blogId           String
  blog             Blog     @relation(fields: [blogId], references: [id])

  @@map("blog_meta")
}

// ======================================
// ============ ENUMS ===================
// ======================================
enum Role {
  USER
  ADMIN
}
