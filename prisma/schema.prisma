generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ======================================
// ============ MODELS ==================
// ======================================
// 1. USERS MODEL
// 2. OTP MODEL

// ======================================
// ============ USERS MODEL =============
// ======================================
model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  otps      Otp[]
  images    Image[]
  addresses Address[]

  @@index([name])
  @@map("users")
}

// ======================================
// ============ OTP MODEL =============
// ======================================
model Otp {
  id        String   @id @default(cuid())
  otpCode   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@map("otp")
}

// ======================================
// ============ IMAGES MODEL =============
// ======================================
model Image {
  id        String   @id @default(cuid())
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([url])
  @@map("images")
}

// ======================================
// ============ ADDRESS MODEL =============
// ======================================
model Address {
  id        String   @id @default(cuid())
  location  String?
  country   String?
  city      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])

  @@map("address")
}
